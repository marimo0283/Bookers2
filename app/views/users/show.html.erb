<div class="col-md-3">
      <h2>User info</h2>
      <table>
        <tbody>
          <tr>
            <th><%= image_tag @user.get_profile_image(100,100) %></th>
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <span><%= link_to "edit", edit_user_path(@user.id) %></span>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form">
        <div class="field">
          <label>Title</label>
          <span><%= f.text_field :title %></span>
        </div>

        <div class="field">
          <label>Opinion</label>
          <span><%= f.text_area :body %></span>
        </div>

        <div class="create">
          <%= f.submit 'Create Book' %>
        </div>
      </div>
      <% end %>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>