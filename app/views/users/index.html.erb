<h2>User info</h2>
      <table>
        <tbody>
          <tr>
            <th><%= image_tag @user.get_profile_image(100,100) %></th>
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <span><%= link_to "edit", edit_user_path(@user.id) %></span>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table>
          <thead>
            <tr>
              <th>Image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", book_path(@user)  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>