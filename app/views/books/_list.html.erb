    <div class="col-md-3">
      <h2>User info</h2>
      <span><%= image_tag user.get_profile_image(100,100) %></span>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <% if user.name != "guestuser" %>
        <div class='row'>
          <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
        </div>
      <% end %>

      <h2 class="mt-3">New book</h2>

      <%= form_with model: book do |f| %>
      <div class="form">
        <div class="form-group">
          <label>Title</label>
          <span><%= f.text_field :title, :class => "form-control book_title" %></span>
        </div>

        <div class="form-group">
          <label>Opinion</label>
          <span><%= f.text_area :body, :class => "form-control book_body" %></span>
        </div>

        <div class="form-group">
         <%= f.submit 'Create Book', :class => "btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
