<main>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table>
        <tbody>
          <tr>
            <th><%= image_tag @book.user.get_profile_image(100,100) %></th>
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <span><%= link_to edit_user_path(@user.id) %></span>
      </div>
    </div>

    <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form">
        <div class="field">
          <label>Title</label>
          <span><%= f.text_field :title %></span>
        </div>

        <div class="field">
          <label>Opinion</label>
          <span><%= f.text_area :body %></span>
        </div>

        <div class="create">
          <%= f.submit 'Create Book' %>
        </div>
      </div>
      <% end %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
        <tbody>
          <tr></tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <br>
              <%= @user.name %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<main>